---
import {Image } from 'astro:assets';


import TravelImage from './../assets/travel/drif-riadh-YpkuRn54y4w-unsplash.jpg';


interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={TravelImage} alt="AI Image background" widths={[
	240, 540, 720, TravelImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${TravelImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={TravelImage} alt="AI Image background" widths={[
	240, 540, 720, TravelImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${TravelImage.width}px`} width={width} /> 
	: 
	height ? <Image src={TravelImage} alt="AI Image background" widths={[
	240, 540, 720, TravelImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${TravelImage.width}px`} height={height}  /> 
	: <Image src={TravelImage} alt="AI Image background" widths={[
	240, 540, 720, TravelImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${TravelImage.width}px`}  />
}
---