---
import {Image } from 'astro:assets';

import FoodImage from './../assets/food/lily-banse--YHSwy6uqvk-unsplash.jpg';

interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={FoodImage} alt="AI Image background" widths={[
	240, 540, 720, FoodImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FoodImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={FoodImage} alt="AI Image background" widths={[
	240, 540, 720, FoodImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FoodImage.width}px`} width={width} /> 
	: 
	height ? <Image src={FoodImage} alt="AI Image background" widths={[
	240, 540, 720, FoodImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FoodImage.width}px`} height={height}  /> 
	: <Image src={FoodImage} alt="AI Image background" widths={[
	240, 540, 720, FoodImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FoodImage.width}px`}  />
}