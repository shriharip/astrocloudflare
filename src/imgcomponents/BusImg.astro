---
import {Image } from 'astro:assets';


import BusinessImage from './../assets/business/scott-graham-5fNmWej4tAA-unsplash.jpg';

interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={BusinessImage} alt="AI Image background" widths={[
	240, 540, 720, BusinessImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${BusinessImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={BusinessImage} alt="AI Image background" widths={[
	240, 540, 720, BusinessImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${BusinessImage.width}px`} width={width} /> 
	: 
	height ? <Image src={BusinessImage} alt="AI Image background" widths={[
	240, 540, 720, BusinessImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${BusinessImage.width}px`} height={height}  /> 
	: <Image src={BusinessImage} alt="AI Image background" widths={[
	240, 540, 720, BusinessImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${BusinessImage.width}px`}  />
}