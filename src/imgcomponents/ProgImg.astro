---
import {Image } from 'astro:assets';

import ProgImage1 from './../assets/programming/fotis-fotopoulos-DuHKoV44prg-unsplash.jpg';
import ProgImage2 from './../assets/programming/ilya-pavlov-OqtafYT5kTw-unsplash.jpg';	

interface Props{
	width?: number;
	height?: number;
	val: number;
}

const { width, height, val } = Astro.props; 

---

{
	val === 1 ? 
	width && height ? <Image src={ProgImage1} alt="AI Image background" widths={[
	240, 540, 720, ProgImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage1.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={ProgImage1} alt="AI Image background" widths={[
	240, 540, 720, ProgImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage1.width}px`} width={width} /> 
	: 
	height ? <Image src={ProgImage1} alt="AI Image background" widths={[
	240, 540, 720, ProgImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage1.width}px`} height={height}  /> 
	: <Image src={ProgImage1} alt="AI Image background" widths={[
	240, 540, 720, ProgImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage1.width}px`}  /> : 
	width && height ? <Image src={ProgImage2} alt="AI Image background" widths={[
	240, 540, 720, ProgImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage2.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={ProgImage2} alt="AI Image background" widths={[
	240, 540, 720, ProgImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage2.width}px`} width={width} /> 
	: 
	height ? <Image src={ProgImage2} alt="AI Image background" widths={[
	240, 540, 720, ProgImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage2.width}px`} height={height}  /> 
	: <Image src={ProgImage2} alt="AI Image background" widths={[
	240, 540, 720, ProgImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${ProgImage2.width}px`} />
}