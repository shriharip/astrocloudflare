---
import {Image } from 'astro:assets';


import FinImage from './../assets/finance/jason-briscoe-amLfrL8LGls-unsplash.jpg';


interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={FinImage} alt="AI Image background" widths={[
	240, 540, 720, FinImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FinImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={FinImage} alt="AI Image background" widths={[
	240, 540, 720, FinImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FinImage.width}px`} width={width} /> 
	: 
	height ? <Image src={FinImage} alt="AI Image background" widths={[
	240, 540, 720, FinImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FinImage.width}px`} height={height}  /> 
	: <Image src={FinImage} alt="AI Image background" widths={[
	240, 540, 720, FinImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${FinImage.width}px`}  />
}