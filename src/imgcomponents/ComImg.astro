---
import {Image } from 'astro:assets';


import CommunityImage1 from './../assets/community/hannah-busing-Zyx1bK9mqmA-unsplash.jpg';
import CommunityImage2 from './../assets/community/helena-lopes-PGnqT0rXWLs-unsplash.jpg';

interface Props{
	width?: number;
	height?: number;
	val: number;
}

const { width, height, val } = Astro.props; 

---

{
	val === 1 ? 
	width && height ? <Image src={CommunityImage1} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage1.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={CommunityImage1} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage1.width}px`} width={width} /> 
	: 
	height ? <Image src={CommunityImage1} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage1.width}px`} height={height}  /> 
	: <Image src={CommunityImage1} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage1.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage1.width}px`}  /> : 
	width && height ? <Image src={CommunityImage2} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage2.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={CommunityImage2} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage2.width}px`} width={width} /> 
	: 
	height ? <Image src={CommunityImage2} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage2.width}px`} height={height}  /> 
	: <Image src={CommunityImage2} alt="AI Image background" widths={[
	240, 540, 720, CommunityImage2.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${CommunityImage2.width}px`} />
}