---
import {Image } from 'astro:assets';

import EImage from './../assets/entertainment/tijs-van-leur-Qnlp3FCO2vc-unsplash.jpg';

interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={EImage} alt="AI Image background" widths={[
	240, 540, 720, EImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${EImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={EImage} alt="AI Image background" widths={[
	240, 540, 720, EImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${EImage.width}px`} width={width} /> 
	: 
	height ? <Image src={EImage} alt="AI Image background" widths={[
	240, 540, 720, EImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${EImage.width}px`} height={height}  /> 
	: <Image src={EImage} alt="AI Image background" widths={[
	240, 540, 720, EImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${EImage.width}px`}  />
}