---
import {Image } from 'astro:assets';

import HealthImage from './../assets/health/emma-simpson-mNGaaLeWEp0-unsplash.jpg';

interface Props{
	width?: number;
	height?: number;
}

const { width, height } = Astro.props;

---

{
	width && height ? <Image src={HealthImage} alt="AI Image background" widths={[
	240, 540, 720, HealthImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${HealthImage.width}px`} width={width} height={height}  /> 
	: 
	width ? <Image src={HealthImage} alt="AI Image background" widths={[
	240, 540, 720, HealthImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${HealthImage.width}px`} width={width} /> 
	: 
	height ? <Image src={HealthImage} alt="AI Image background" widths={[
	240, 540, 720, HealthImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${HealthImage.width}px`} height={height}  /> 
	: <Image src={HealthImage} alt="AI Image background" widths={[
	240, 540, 720, HealthImage.width]} sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${HealthImage.width}px`}  />
}---