---
import type { IFeedExplore } from '@/types';

type Props = IFeedExplore

const data = Astro.props;

---

<div class="card w-96 my-2 mx-2 shadow-xl z-30 border border-accent" >
  <div class="card-body">
    <h2 class="card-title">
			<a href={ data.id.toString()}>{ data.title }</a>
      <div class="badge badge-secondary">NEW</div>
    </h2>
    <p>{data.info.content}</p>
    <div class="card-actions justify-between mt-2">
      <div class="badge badge-outline rounded-md p-3">
				Domain: {data.domain.domain}
			</div> 
      <div class="badge badge-outline rounded-md p-3">Category: {
				data.category.catg
				}</div>
    </div>
  </div>
</div>