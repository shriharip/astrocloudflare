---
import type { CollectionEntry } from "astro:content";

interface Props {
	faqs: CollectionEntry<"faqs">;
}

const {faqs} = Astro.props;
---

  <div class="mx-auto max-w-7xl px-6 py-24 sm:pt-32 lg:px-8 lg:py-40">
    <div class="lg:grid lg:grid-cols-12 lg:gap-8">
      <div class="lg:col-span-5">
        <h2 class="text-2xl font-bold leading-10 tracking-tight">{faqs.data.title}</h2>
        <p class="mt-4 text-base leading-7">{faqs.data.subtitle} </p>
      </div>
      <div class="mt-10 lg:col-span-7 lg:mt-0">
        <dl class="space-y-10">

					{faqs.data.questions?.map((question) => (
					<div>
						<dt class="text-base font-semibold leading-7">{question.title}</dt>
						<dd class="mt-2 text-base leading-7">{question.content}</dd>
					</div>
					)
					)}
        </dl>
      </div>
    </div>
  </div>

